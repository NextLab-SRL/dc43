{
  "version": "1.0.0",
  "kind": "DataContract",
  "apiVersion": "3.0.2",
  "id": "retail_personalized_offers",
  "name": "Personalized offers",
  "description": {
    "summary": "Customer-facing offer recommendations combining demand forecast and promotional rules.",
    "usage": "Feed the mobile application and clienteling tools with targeted campaign actions."
  },
  "status": "active",
  "servers": [
    {
      "server": "local",
      "type": "filesystem",
      "path": "data/retail_personalized_offers",
      "format": "json",
      "customProperties": [
        {
          "property": "dc43.core.versioning",
          "value": {
            "mode": "delta",
            "includePriorVersions": false,
            "subfolder": "{version}",
            "filePattern": "offers.json"
          }
        },
        {
          "property": "dc43.pathPattern",
          "value": "data/retail_personalized_offers/{version}/offers.json"
        }
      ]
    }
  ],
  "schema": [
    {
      "name": "offers",
      "primaryKey": ["customer_id", "business_date", "offer_id"],
      "properties": [
        {"name": "customer_id", "physicalType": "string", "required": true},
        {"name": "store_key", "physicalType": "string", "required": false},
        {"name": "store_id", "physicalType": "string", "required": true},
        {"name": "business_date", "physicalType": "string", "required": true},
        {"name": "offer_id", "physicalType": "string", "required": true},
        {"name": "category", "physicalType": "string", "required": true},
        {"name": "recommended_discount", "physicalType": "double", "required": true},
        {"name": "forecast_units", "physicalType": "double", "required": true},
        {"name": "primary_metric", "physicalType": "string", "required": true},
        {"name": "confidence", "physicalType": "double", "required": true},
        {"name": "region", "physicalType": "string", "required": false},
        {"name": "sell_through_rate", "physicalType": "double", "required": false},
        {"name": "rationale", "physicalType": "string", "required": true}
      ]
    }
  ]
}
